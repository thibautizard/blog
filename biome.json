{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/core", "ultracite/next"],
  "files": {
    "includes": ["!src/components/magicui/**/*", "!src/components/kibo-ui/**/*"]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noUnknownAtRules": "warn"
      },
      "style": {
        "useBlockStatements": "off"
      }
    }
  }
}
