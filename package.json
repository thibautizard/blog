{
  "name": "blog",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "bun --bun cross-env NODE_OPTIONS=--no-deprecation next build",
    "dev": "bun --bun cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation bun x ultracite check",
    "format": "cross-env NODE_OPTIONS=--no-deprecation bun x ultracite fix",
    "start": "bun --bun cross-env NODE_OPTIONS=--no-deprecation next start"
  },
  "dependencies": {
    "@base-ui-components/react": "1.0.0-rc.0",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "16.1.6",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/mdx": "^2.0.13",
    "@vercel/analytics": "^1.6.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^10.1.0",
    "graphql": "^16.11.0",
    "lucide-react": "^0.563.0",
    "motion": "^12.29.2",
    "next": "15",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rehype-pretty-code": "^0.14.1",
    "sharp": "^0.34.4",
    "shiki": "^3.21.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.2",
    "lefthook": "^2.0.16",
    "lint-staged": "^16.2.4",
    "typescript": "^5.9.3",
    "ultracite": "^7.1.1"
  },
  "engines": {
    "node": "22.x",
    "pnpm": "^10"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  }
}
